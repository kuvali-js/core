// .vscode/settings.json
{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint":   "explicit", // Nur ESLint darf fixen
    "source.organizeImports": "never",    // Oft die Ursache f√ºr Zeilenverschiebungen
    "source.sortMembers":     "explicit"
  },
  "editor.formatOnSave":      false,  // Verhindert, dass Prettier/Standard-Formatter eingreifen
  "javascript.format.enable": false,  // Deaktiviert den internen VS Code Formatter
  "typescript.format.enable": false   // Deaktiviert den internen VS Code Formatter
}
