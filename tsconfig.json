{
  "//": "/tsconfig.json",
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "@kuvali-js/core": ["./core/index.ts"],
      "@services/*":     ["./src/services/*"],
      "@components/*":   ["./src/components/*"],
      "@constants/*":    ["./src/constants/*"],
      "@ui/*":           ["./src/components/ui/*"],
      "@layouts/*":      ["./src/components/layouts/*"],
      "@theme/*":        ["./src/theme/*"],
      "@hooks/*":        ["./src/hooks/*"],
      "@config/*":       ["./src/config/*"],
      "app/*":           ["./src/app/*"],
      "@/*":             ["./src/*"],
      "#/*":             ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "core/**/*.ts",
    "core/**/*.tsx",
    "eslint.config.js"
  ]
}
