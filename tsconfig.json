{
  "//": "/tsconfig.json",
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "types": ["expo", "node"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "@kuvali-js/core": ["./core/index.ts"],
      "@services/*": ["./src/services/*"],
      "@config/*": ["./src/config/*"],
      "@/*": ["./src/*"],
      "#/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "core/**/*.ts",
    "core/**/*.tsx",
    "eslint.config.js"
  ]
}
